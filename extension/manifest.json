{
  "manifest_version": 3,
  "name": "Gloss",
  "version": "1.0.0",
  "description": "A softer way to read. Simplify articles and listen with text-to-speech.",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "dist/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js", "content.js", "audiotrack.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/index.html",
        "dist/assets/*",
        "dist/*",
        "icons/*",
        "assets/alert.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/GlossLogo16.png",
    "48": "icons/GlossLogo48.png",
    "128": "icons/GlossLogo128.png"
  }
}
