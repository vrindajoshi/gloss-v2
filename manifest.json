{
  "manifest_version": 3,
  "name": "Article Scraper",
  "version": "1.0.0",
  "description": "Call local article scraper and display formatted article",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "popup.html"
  },  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "audiotrack.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/alert.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
